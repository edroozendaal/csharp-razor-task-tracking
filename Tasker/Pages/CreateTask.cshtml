@page "/create-task"
@model Tasker.CreateTaskModel
@{
    ViewData["Title"] = "CreateTask";
}

<h1>New Task</h1>

<form asp-page="CreateTask" method="post">
    <label asp-for="NewTask.Title">Title</label>
    <input type="text" asp-for="NewTask.Title" value="" />
    <label asp-for="NewTask.Description">Description</label>
    <input type="text" asp-for="NewTask.Description" value="" />
    <label asp-for="NewTask.Priority">Priority</label>
    <input type="text" asp-for="NewTask.Priority" value="" />
    <input type="submit" value="Submit" />
</form>